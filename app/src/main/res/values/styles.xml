<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:theme">@style/AppThemeAlert</item>
    </style>

    <style name="AppThemeAlert" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="android:scrollViewStyle">@style/AppScrollView</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="buttonStyle">@style/AppAlertButton</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="background">@drawable/action_bar_background</item>
        <item name="titleTextStyle">@style/AppActionBarTitle</item>
    </style>

    <style name="AppActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppScrollView" parent="android:Widget.ScrollView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fadingEdgeLength">0dp</item>
    </style>

    <style name="AppAlertButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
